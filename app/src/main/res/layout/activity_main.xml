<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/cl_main_layout"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextClock
            android:id="@+id/tc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:format12Hour="hh:mm"
            android:format24Hour="kk:mm"
            android:textColor="@color/white"
            android:textSize="200sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_listening"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_mic"
            android:tint="@color/white"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="Listening" />

        <TextClock
            android:id="@+id/tc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="dd MMM yyyy"
            android:format24Hour="dd MMM yyyy"
            android:textColor="@color/white"
            android:textSize="54sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tc_time" />

        <!--<TextView
            android:id="@+id/tv_current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:drawableTop="@drawable/ic_weather_partlycloudy"
            tools:text="6ºC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" />-->

        <LinearLayout
            android:id="@+id/ll_current_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" >

            <ImageView
                android:id="@+id/iv_current_weather"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_weather_partlycloudy" />

            <TextView
                android:id="@+id/tv_current_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="50sp"
                tools:text="6ºC" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forecast_weather1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/ll_current_weather"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" >

            <ImageView
                android:id="@+id/iv_forecast_weather1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_weather_partlycloudy" />

            <TextView
                android:id="@+id/tv_forecast_temp1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:text="10ºC" />

            <TextView
                android:id="@+id/tv_forecast_date1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="5 Jan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forecast_weather2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/ll_forecast_weather1"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" >

            <ImageView
                android:id="@+id/iv_forecast_weather2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_weather_sunny" />

            <TextView
                android:id="@+id/tv_forecast_temp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:text="10ºC" />

            <TextView
                android:id="@+id/tv_forecast_date2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="6 Jan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forecast_weather3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/ll_forecast_weather2"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" >

            <ImageView
                android:id="@+id/iv_forecast_weather3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_weather_sleet" />

            <TextView
                android:id="@+id/tv_forecast_temp3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:text="10ºC" />

            <TextView
                android:id="@+id/tv_forecast_date3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="7 Jan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forecast_weather4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/ll_forecast_weather3"
            app:layout_constraintTop_toBottomOf="@+id/tc_date" >

            <ImageView
                android:id="@+id/iv_forecast_weather4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/ic_weather_partlycloudy" />

            <TextView
                android:id="@+id/tv_forecast_temp4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:text="10ºC" />

            <TextView
                android:id="@+id/tv_forecast_date4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="8 Jan" />

        </LinearLayout>

        <View
            android:id="@+id/v_separator_1"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_current_weather" />

        <ImageView
            android:id="@+id/iv_stats_wind"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_wind_stats"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_separator_1" />

        <TextView
            android:id="@+id/tv_stats_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingTop="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="13km/k W | 22C"
            app:layout_constraintLeft_toRightOf="@+id/iv_stats_wind"
            app:layout_constraintTop_toTopOf="@+id/iv_stats_wind" />

        <ImageView
            android:id="@+id/iv_stats_humidity"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_water_percent"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_stats_wind" />

        <TextView
            android:id="@+id/tv_stats_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingTop="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="100%"
            app:layout_constraintLeft_toRightOf="@+id/iv_stats_humidity"
            app:layout_constraintTop_toTopOf="@+id/iv_stats_humidity" />

        <ImageView
            android:id="@+id/iv_stats_pressure"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="32dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_gauge"
            android:tint="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/tv_stats_visibility"
            app:layout_constraintBottom_toBottomOf="@+id/iv_stats_visibility" />

        <TextView
            android:id="@+id/tv_stats_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingTop="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="1020mb"
            app:layout_constraintLeft_toRightOf="@+id/iv_stats_pressure"
            app:layout_constraintTop_toTopOf="@+id/iv_stats_pressure" />

        <ImageView
            android:id="@+id/iv_stats_visibility"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="32dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_visibility"
            android:tint="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/tv_stats_humidity"
            app:layout_constraintBottom_toBottomOf="@+id/iv_stats_humidity" />

        <TextView
            android:id="@+id/tv_stats_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="16km"
            app:layout_constraintLeft_toRightOf="@+id/iv_stats_visibility"
            app:layout_constraintTop_toTopOf="@+id/iv_stats_visibility" />

        <TextView
            android:id="@+id/tv_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingStart="64dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="Last updated: 26 minutes ago"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_separator_1" />

        <View
            android:id="@+id/v_separator_2"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_stats_humidity" />

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_calendar"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_stats_humidity" />

        <TextView
            android:id="@+id/tv_calendar_event"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textSize="28sp"
            tools:text="Very important stuff ya know, Very important stuff ya know, Very important stuff ya know, Very important stuff ya know"
            app:layout_constraintLeft_toRightOf="@+id/iv_calendar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_separator_2" />

        <View
            android:id="@+id/v_separator_3"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_reddit_post" />

        <ImageView
            android:id="@+id/iv_reddit_post"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_reddit"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_reddit_post_votes" />

        <TextView
            android:id="@+id/tv_reddit_post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="28sp"
            tools:text="Butte man arrested after calling cops to complain he was ripped off in meth deal to complain he was ripped off in meth deal"
            app:layout_constraintLeft_toRightOf="@+id/iv_reddit_post"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_separator_3" />

        <TextView
            android:id="@+id/tv_reddit_post_votes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="26sp"
            tools:text="9999"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>